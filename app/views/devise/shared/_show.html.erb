<%= turbo_frame_tag "freelancer", class: "min-w-full" do %>
  <% freelancers.each do |free|%>
    <%= render "devise/shared/freelancer", free: free %>
  <% end %>
<% end %>

<div class="mt-3">
  <% if pagy.prev %>
    <%= link_to "< Previous page", root_path(page: pagy.prev), data: {turbo_action: "advance"}, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded float-right" %>
  <% end %>
  <% if pagy.next %>
    <%= link_to "Next page >", root_path(page: pagy.next), data: {turbo_action: "advance"}, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>